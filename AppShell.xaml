<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp3"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp3">

    <TabBar>
        <Tab Title="О программе">
            <ShellContent Title="Home"
                          ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>

        <Tab Title="Посчитаем">
            <ShellContent Title="Автоматичческий расчет"
                          ContentTemplate="{DataTemplate local:NewPage1}"/>
            <ShellContent Title="Ручной расчет"
                          ContentTemplate="{DataTemplate local:NewPage2}"/>
        </Tab>
    </TabBar>

</Shell>
